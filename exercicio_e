package exercicio_e;
import java.util.Scanner;
public class exercicio {
	public static void main(String[]args) {
Scanner sc=new Scanner (System.in);
int soma =0;
int soma1 =0;
System.out.println("Coloque um numero interio");
soma1=sc.nextInt();
do {
	if(soma%1==0) {
		System.out.println(soma);
		soma1=soma1+soma;
	}
soma++;}
while(soma<=15);
System.out.println("total da soma "+soma1);

}
}
